@model MaouHeroLanding.Models.Encomendas

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Encomendas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Local_entrega)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Local_entrega)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preco)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>
</div>
<p>
    @if (User.IsInRole("funcionario"))
    {
        <text>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
        </text>
    }

    <div>
        <table class="table">
            <tr>
                @* representa uma primeira linha na tabela, que é o seu cabeçalho *@
                <th>
                    @* listar o Nome do atributo DataDaMulta *@
                    @Html.DisplayNameFor(model => model.ListaDasEncomendas.FirstOrDefault().id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ListaDasEncomendas.FirstOrDefault().preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ListaDasEncomendas.FirstOrDefault().EncomendaFK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ListaDasEncomendas.FirstOrDefault().ArtigoFK)
                </th>
            </tr>
            @* representar as diversas multas do agente *@
            @foreach (var compra in Model.ListaDasEncomendas)
            {
                <tr>
                    <td>
                        @compra.id 
                    </td>
                    <td> @ compra.preco</td>
                    <td> @compra.EncomendaFK</td>
                    <td>
                        @compra.ArtigoFK
                    </td>
                </tr>
            }
        </table>
    </div>

        @Html.ActionLink("Back to List", "Index")
</p>
